{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "webApp_name": {
      "type": "string",
      "defaultValue": "webAppName"
    },
    "webApp_slotName": {
      "type": "string",
      "defaultValue": "staging"
    },
    "webApp_vDir": {
      "type": "string",
      "defaultValue": "app"
    },
    "webApp_alwaysOn": {
      "type": "string",
      "defaultValue": "false"
    },
    "webApp_use32Bits": {
      "type": "string",
      "defaultValue": "true"
    },
    "appPlan_name": {
      "type": "string",
      "defaultValue": "appPlanName"
    },
    "appPlan_resourceGroup": {
      "type": "string",
      "defaultValue": "appPlanResourceGroup"
    },
    "appInsights_instrumentationKey": {
      "type": "string",
      "defaultValue": "00000000-0000-0000-0000-000000000000"
    }
  },
  "variables": {},
  "resources": [
    {
      "comments": "Web apps proper.",
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "name": "[parameters('webApp_name')]",
      "apiVersion": "2016-08-01",
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(parameters('webApp_name'),'.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(parameters('webApp_name'),'.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId(parameters('appPlan_resourceGroup'), 'Microsoft.Web/serverfarms', parameters('appPlan_name'))]",
        "reserved": false,
        "siteConfig": {
          "numberOfWorkers": 1,
          "defaultDocuments": [
            "index.htm",
            "index.html",
            "iisstart.htm",
            "default.aspx",
            "hostingstart.html"
          ],
          "netFrameworkVersion": "v4.6",
          "phpVersion": "",
          "pythonVersion": "",
          "nodeVersion": "",
          "linuxFxVersion": "",
          "windowsFxVersion": null,
          "requestTracingEnabled": false,
          "remoteDebuggingEnabled": false,
          "remoteDebuggingVersion": "VS2017",
          "httpLoggingEnabled": false,
          "logsDirectorySizeLimit": 100,
          "detailedErrorLoggingEnabled": false,
          "publishingUsername": "[concat('$', parameters('webApp_name'))]",
          "publishingPassword": null,
          "appSettings": [
            {
              "name": "ApplicationInsights.InstrumentationKey",
              "value": "[parameters('appInsights_instrumentationKey')]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[parameters('appInsights_instrumentationKey')]"
            }
          ],
          "metadata": null,
          "connectionStrings": [],
          "machineKey": null,
          "scmType": "None",
          "use32BitWorkerProcess": "[parameters('webApp_use32Bits')]",
          "webSocketsEnabled": false,
          "alwaysOn": "[parameters('webApp_alwaysOn')]",
          "javaVersion": "",
          "javaContainer": "",
          "javaContainerVersion": "",
          "appCommandLine": "",
          "managedPipelineMode": "Integrated",
          "virtualApplications": [
            {
              "virtualPath": "/",
              "physicalPath": "site\\wwwroot",
              "preloadEnabled": false,
              "virtualDirectories": []
            },
            {
              "virtualPath": "[concat('/', parameters('webApp_vDir'))]",
              "physicalPath": "[concat('site\\', parameters('webApp_vDir'))]",
              "preloadEnabled": "[parameters('webApp_alwaysOn')]",
              "virtualDirectories": []
            }
          ],
          "winAuthAdminState": 0,
          "winAuthTenantState": 0,
          "customAppPoolIdentityAdminState": false,
          "customAppPoolIdentityTenantState": false,
          "runtimeADUser": null,
          "runtimeADUserPassword": null,
          "loadBalancing": "LeastRequests",
          "routingRules": [],
          "experiments": {
            "rampUpRules": []
          },
          "autoHealEnabled": false,
          "vnetName": "",
          "siteAuthEnabled": false,
          "siteAuthSettings": {
            "enabled": null,
            "unauthenticatedClientAction": null,
            "tokenStoreEnabled": null,
            "allowedExternalRedirectUrls": null,
            "defaultProvider": null,
            "clientId": null,
            "clientSecret": null,
            "issuer": null,
            "allowedAudiences": null,
            "additionalLoginParams": null,
            "isAadAutoProvisioned": false,
            "googleClientId": null,
            "googleClientSecret": null,
            "googleOAuthScopes": null,
            "facebookAppId": null,
            "facebookAppSecret": null,
            "facebookOAuthScopes": null,
            "twitterConsumerKey": null,
            "twitterConsumerSecret": null,
            "microsoftAccountClientId": null,
            "microsoftAccountClientSecret": null,
            "microsoftAccountOAuthScopes": null
          },
          "managedServiceIdentityId": null,
          "xManagedServiceIdentityId": null,
          "http20Enabled": false,
          "minTlsVersion": "1.2",
          "ftpsState": "FtpsOnly"
        },
        "clientAffinityEnabled": false,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0
      },
      "dependsOn": []
    },
    {
      "comments": "Web app host bindings.",
      "type": "Microsoft.Web/sites/hostNameBindings",
      "name": "[concat(parameters('webApp_name'), '/', parameters('webApp_name'), '.azurewebsites.net')]",
      "apiVersion": "2016-08-01",
      "location": "North Central US",
      "scale": null,
      "properties": {
        "siteName": "[parameters('webApp_name')]",
        "hostNameType": "Verified"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webApp_name'))]"
      ]
    },
    {
      "comments": "Web app slots.",
      "type": "Microsoft.Web/sites/slots",
      "kind": "app",
      "name": "[concat(parameters('webApp_name'), '/', parameters('webApp_slotName'))]",
      "apiVersion": "2016-08-01",
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(parameters('webApp_name'), '-', parameters('webApp_slotName'),'.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(parameters('webApp_name'), '-', parameters('webApp_slotName'),'.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId(parameters('appPlan_resourceGroup'), 'Microsoft.Web/serverfarms', parameters('appPlan_name'))]",
        "reserved": false,
        "siteConfig": {
          "numberOfWorkers": 1,
          "defaultDocuments": [
            "index.htm",
            "index.html",
            "iisstart.htm",
            "default.aspx",
            "hostingstart.html"
          ],
          "netFrameworkVersion": "v4.6",
          "phpVersion": "",
          "pythonVersion": "",
          "nodeVersion": "",
          "linuxFxVersion": "",
          "windowsFxVersion": null,
          "requestTracingEnabled": false,
          "remoteDebuggingEnabled": false,
          "remoteDebuggingVersion": "VS2017",
          "httpLoggingEnabled": false,
          "logsDirectorySizeLimit": 100,
          "detailedErrorLoggingEnabled": false,
          "publishingUsername": "[concat('$', parameters('webApp_name'))]",
          "publishingPassword": null,
          "appSettings": [
            {
              "name": "ApplicationInsights.InstrumentationKey",
              "value": "[parameters('appInsights_instrumentationKey')]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[parameters('appInsights_instrumentationKey')]"
            }
          ],
          "metadata": null,
          "connectionStrings": [],
          "machineKey": null,
          "scmType": "None",
          "use32BitWorkerProcess": "[parameters('webApp_use32Bits')]",
          "webSocketsEnabled": false,
          "alwaysOn": "[parameters('webApp_alwaysOn')]",
          "javaVersion": "",
          "javaContainer": "",
          "javaContainerVersion": "",
          "appCommandLine": "",
          "managedPipelineMode": "Integrated",
          "virtualApplications": [
            {
              "virtualPath": "/",
              "physicalPath": "site\\wwwroot",
              "preloadEnabled": false,
              "virtualDirectories": []
            },
            {
              "virtualPath": "[concat('/', parameters('webApp_vDir'))]",
              "physicalPath": "[concat('site\\', parameters('webApp_vDir'))]",
              "preloadEnabled": "[parameters('webApp_alwaysOn')]",
              "virtualDirectories": []
            }
          ],
          "winAuthAdminState": 0,
          "winAuthTenantState": 0,
          "customAppPoolIdentityAdminState": false,
          "customAppPoolIdentityTenantState": false,
          "runtimeADUser": null,
          "runtimeADUserPassword": null,
          "loadBalancing": "LeastRequests",
          "routingRules": [],
          "experiments": {
            "rampUpRules": []
          },
          "autoHealEnabled": false,
          "vnetName": "",
          "siteAuthEnabled": false,
          "siteAuthSettings": {
            "enabled": null,
            "unauthenticatedClientAction": null,
            "tokenStoreEnabled": null,
            "allowedExternalRedirectUrls": null,
            "defaultProvider": null,
            "clientId": null,
            "clientSecret": null,
            "issuer": null,
            "allowedAudiences": null,
            "additionalLoginParams": null,
            "isAadAutoProvisioned": false,
            "googleClientId": null,
            "googleClientSecret": null,
            "googleOAuthScopes": null,
            "facebookAppId": null,
            "facebookAppSecret": null,
            "facebookOAuthScopes": null,
            "twitterConsumerKey": null,
            "twitterConsumerSecret": null,
            "microsoftAccountClientId": null,
            "microsoftAccountClientSecret": null,
            "microsoftAccountOAuthScopes": null
          },
          "managedServiceIdentityId": null,
          "xManagedServiceIdentityId": null,
          "http20Enabled": false,
          "minTlsVersion": "1.2",
          "ftpsState": "AllAllowed"
        },
        "clientAffinityEnabled": false,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webApp_name'))]"
      ]
    },
    {
      "comments": "Web app slot host bindings.",
      "type": "Microsoft.Web/sites/slots/hostNameBindings",
      "name": "[concat(parameters('webApp_name'), '/', parameters('webApp_slotName'),  '/', parameters('webApp_name'), '-', parameters('webApp_slotName'), '.azurewebsites.net')]",
      "apiVersion": "2016-08-01",
      "location": "North Central US",
      "scale": null,
      "properties": {
        "siteName": "[concat(parameters('webApp_name'), '(', parameters('webApp_slotName'), ')')]",
        "hostNameType": "Verified"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/slots', parameters('webApp_name'), parameters('webApp_slotName'))]"
      ]
    }
  ]
}
