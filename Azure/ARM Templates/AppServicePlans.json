{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appPlans": {
      "type": "array",
      "metadata": {
        "description": "An array of objects describing the app plans to create. Each object should have 4 properties: name, tier, size and capacity."
      },
      "defaultValue": [
        {
          "name": "appPlanName",
          "tier": "Standard",
          "size": "S1",
          "capacity": 1
        }
      ]
    }
  },
  "variables": {},
  "resources": [
    {
      "comments": "App service plans.",
      "type": "Microsoft.Web/serverfarms",
      "sku": {
        "name": "[params('appPlans')[copyIndex()].size]",
        "tier": "[params('appPlans')[copyIndex()].tier]",
        "size": "[params('appPlans')[copyIndex()].size]",
        "family": "[first(params('appPlans')[copyIndex()].size)]",
        "capacity": "[params('appPlans')[copyIndex()].capacity]"
      },
      "kind": "app",
      "name": "[params('appPlans')[copyIndex()].name]",
      "apiVersion": "2016-09-01",
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {
        "name": "[params('appPlans')[copyIndex()].name]",
        "perSiteScaling": false,
        "reserved": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      },
      "dependsOn": [],
      "copy": {
        "name": "plan_copy",
        "count": "[length(parameters('appPlans'))]"
      }
    }
  ]
}